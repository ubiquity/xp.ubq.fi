# GitHub App credentials for API authentication
GITHUB_APP_ID=your_github_app_id
GITHUB_APP_INSTALLATION_ID=your_installation_id
# Paste your PEM private key as a single line with literal \n characters
GITHUB_APP_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIEvgIBADANBgkqhkiG9w0B...\n-----END PRIVATE KEY-----"

# Repository info
GITHUB_OWNER=your_github_org_or_username
GITHUB_REPO=your_repository_name

# Workflow filename or ID (if triggering workflows)
WORKFLOW_ID=your_workflow_file.yml

# Shared secret for callbacks (if applicable)
PROXY_CALLBACK_SECRET=your_callback_secret
