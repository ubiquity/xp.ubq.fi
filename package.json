{
  "name": "bun-esbuild-frontend",
  "version": "0.1.0",
  "scripts": {
    "build:wasm": "cd wasm/wasm-unzipper && RUSTFLAGS=\"-C target-feature=+simd128\" cargo build --target wasm32-unknown-unknown --release",
    "build": "bun run tools/build.ts",
    "watch": "bun run tools/watch.ts",
    "type-check": "tsc --noEmit --watch",
    "dev:server": "bun --hot run tools/server.ts",
    "dev": "run-p watch type-check dev:server"
  },
  "devDependencies": {
    "@types/bun": "^1.2.9",
    "bun-types": "^1.2.9",
    "esbuild": "^0.25.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@zip.js/zip.js": "^2.7.60",
    "fflate": "^0.8.2",
    "jose": "^6.0.10"
  }
}
