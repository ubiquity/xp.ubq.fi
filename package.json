{
  "name": "minimal-deno-esbuild-app",
  "version": "0.1.0",
  "scripts": {
    "build": "bun run tools/build.ts",
    "watch": "bun run tools/watch.ts",
    "type-check": "tsc --noEmit --watch",
    "dev:server": "deno run --allow-read --allow-net tools/server.ts | cat",
    "all": "run-p watch type-check dev:server"
  },
  "devDependencies": {
    "esbuild": "^0.25.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  }
}
